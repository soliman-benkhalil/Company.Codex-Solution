@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Role Page</h1>

<br />
<br />

<form asp-action="Edit" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <partial name="ParitalViews/EditCreateRoleParitalView" model="@Model" />


    <a asp-action="AddOrRemoveUser" asp-route-roleId="@Model.Id" class="btn btn-success mt-3">Add Or Remove User</a>

    <input type="submit" value="Save" class="btn btn-warning mt-3" />  
    <a asp-action="Index" class="btn btn-light mt-3">Back To List</a>
</form>


@section EmployeeClientSideValidationSection {
