@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.FirstName)</th>
                <th>@Html.DisplayNameFor(U => U.LastName)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FirstName</td>
                    <td>@User.LastName</td>
                    <td>@User.Email</td>
                    <td>
                        @string.Join(" ", User .Roles)
                    </td>
                    <partial name="_ButtonPartialView" model="@User.Id" /> @* // Her I Have To Name The model Because The Model Of The 2 Files Are Different Here Is IEnumerable and in the parital view is int *@
                </tr>
            }
        </tbody>
    </table>
}
else if (!Model.Any())
{
    <div class="alert alert-warning">
        <h4>There Is No Employees</h4>
    </div>
}